{
  "name": "microservice-starter-kit",
  "version": "0.0.1",
  "description": "a genewral microservice starter kit with databsse configuration done",
  "author": "Olatunji Ayodabo",
  "license": "MIT",
  "scripts": {
    "audit-ci": "node ./node_modules/audit-ci/bin/audit-ci --moderate",
    "clean": "trash dist coverage",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier --write 'src/**/*.{ts,js,json}'",
    "fix:tslint": "tslint --project . --fix",
    "lint": "run-s lint:*",
    "lint:prettier": "prettier -c 'src/**/*.{ts,js,json}'",
    "lint:tslint": "tslint --project .",
    "prebuild": "rimraf dist",
    "build": "run-s clean build:*",
    "build:main": "tsc --build",
    "build:static": "cpx './src/**/*.{html,png,jpg,mst,json}' dist",
    "migration:run": "node ./node_modules/typeorm/cli.js migration:run",
    "migrate": "run-s build migration:run",
    "create-migration": "run-s build && ts-node ./node_modules/typeorm/cli.js migration:create",
    "gen-migration": "run-s build && ts-node ./node_modules/typeorm/cli.js migration:generate",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@hapi/joi": "17.1.0",
    "@nestjs/common": "6.10.14",
    "@nestjs/core": "6.10.14",
    "@nestjs/microservices": "6.11.6",
    "@nestjs/platform-express": "6.10.14",
    "@nestjs/typeorm": "6.3.1",
    "async": "3.1.1",
    "audit-ci": "2.4.2",
    "cpx": "1.5.0",
    "dotenv": "8.2.0",
    "moment": "2.24.0",
    "npm-run-all": "4.1.5",
    "pg": "7.18.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.0",
    "rxjs": "6.5.4",
    "trash-cli": "3.0.0",
    "tslint": "6.0.0",
    "typeorm": "0.2.22"
  },
  "devDependencies": {
    "@nestjs/cli": "6.13.2",
    "@nestjs/schematics": "6.8.1",
    "@nestjs/testing": "6.10.14",
    "@types/express": "4.17.2",
    "@types/hapi__joi": "16.0.9",
    "@types/jest": "25.1.1",
    "@types/node": "13.1.6",
    "@types/supertest": "2.0.8",
    "@typescript-eslint/eslint-plugin": "2.12.0",
    "@typescript-eslint/parser": "2.12.0",
    "eslint": "6.7.2",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-import": "2.19.1",
    "husky": "4.2.1",
    "jest": "24.9.0",
    "lint-staged": "10.0.7",
    "prettier": "1.18.2",
    "supertest": "4.0.2",
    "ts-jest": "25.1.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.6.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.7.4",
    "typescript-tslint-plugin": "0.5.5"
  },
  "private": true,
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "yarn lint:prettier",
    "!(*spec.).ts": "yarn lint:tslint",
    "*.{js,json,css,md}": "yarn lint:prettier"
  }
}
